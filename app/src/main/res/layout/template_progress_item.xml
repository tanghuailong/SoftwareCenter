<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/back_text"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_product_name"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textColor="@color/order_text"
                android:textSize="16sp"
                android:gravity="center"

                android:layout_marginRight="20dp"/>

            <com.daimajia.numberprogressbar.NumberProgressBar
                android:id="@+id/number_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/NumberProgressBar_Passing_Green"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="60dp"

                app:progress_unreached_color="@color/grey"
                app:progress_reached_color="#6F9A10"

                app:progress_unreached_bar_height="10dp"
                app:progress_reached_bar_height="10dp"
                android:layout_gravity="center"
                app:progress_text_size="10sp"
                app:progress_text_color="#3498DB"
                app:progress_text_offset="1dp"
                app:progress_text_visibility="visible"

                />

        </LinearLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>