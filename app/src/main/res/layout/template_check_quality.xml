<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/back_text">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/linearlayout11"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="产品名称:"
                android:textSize="16dp"
                android:textColor="@color/order_text"
                android:gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/text_product_desc"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/order_text"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="@color/white">

                </View>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout12"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="产品编码:"
                android:textSize="16dp"
                android:textColor="@color/order_text"
                android:gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/text_product_id"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/order_text"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    >

                </View>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout13"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="检测工位:"
                android:textSize="16dp"
                android:textColor="@color/order_text"
                android:gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/text_quality_post_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/order_text"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    >

                </View>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout14"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="质检工位编号:"
                android:textSize="16dp"
                android:textColor="@color/order_text"
                android:gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/text_quality_post_id"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/order_text"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    >

                </View>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="质检时间:"
                android:textSize="16dp"
                android:textColor="@color/order_text"
                android:gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/text_through_post_time"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/order_text"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    >

                </View>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout16"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="不良细项种类名称:"
                android:textSize="16dp"
                android:textColor="@color/order_text"
                android:gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/text_category_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/order_text"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    >

                </View>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout17"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="不良细项种类编码:"
                android:textSize="16dp"
                android:textColor="@color/order_text"
                android:gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/text_category_code"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/order_text"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    >

                </View>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout18"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="检测结果:"
                android:textSize="16dp"
                android:textColor="@color/order_text"
                android:gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/text_quality_result"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/order_text"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    >

                </View>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>